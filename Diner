# V Control
def view():
  while True:
    global counter
    global seat_A
    global Table_A
    global Table_B
    global seat_B
    global Table_C
    global seat_C
    counter += 1
    time.sleep(1)
    print("----------------------")
    print("Showing Tables")
    print("----------------------")
    time.sleep(1)
    #Table A
    print("Table - A has " + str(Table_A) + " people in it! (Remaining seats: " + str(seat_A) + ")")
    print("")
    #Table B
    time.sleep(.1)
    print("Table - B has " + str(Table_B) + " people in it! (Remaining seats: " + str(seat_B) + ")")
    print("")
    #Table C
    time.sleep(.1)
    print("Table - C has " + str(Table_C) + " people in it! (Remaining seats: " + str(seat_C) + ")")
    print("----------------------")
    time.sleep(1)
    quit = input("Type 'B' to go back\nEnter here: ")
    quit = quit.upper()
    if quit == 'B':
      time.sleep(1)
      print("----------------------")
      print("Taking you back!")
      print("----------------------")
      print("")
      time.sleep(1)
      main()

# S Control
def sit():
