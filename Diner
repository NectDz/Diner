def quit():
  while True:
    global counter
    counter += 1
    quit = input("Type 'B' to go back\nType 'C' to see the same option\nEnter here: ")
    quit = quit.upper()
    if quit == 'B':
      time.sleep(1)
      print("----------------------")
      print("Taking you back!")
      print("")
      time.sleep(1)
      main()
    elif quit == 'C':
      break
    else :
      print("I did not understand, reshowing option...")
      time.sleep(1)
      continue
      
# Intro
def intro():
  print("Welcome to Kevin's Diner Oraganizer!")
  time.sleep(.1)
  print("___ ___ _  _ ___ ___ ")
  time.sleep(.1)
  print("|   \_ _| \| | __| _ /")
  time.sleep(.1)
  print("| |) | || .` | _||   /")
  time.sleep(.1)
  print("|___/___|_|\_|___|_|_/")
  time.sleep(.1)
  print("-----------------------")
  time.sleep(.1)


